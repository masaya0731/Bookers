<main>
  <p class="flash-message"><%= flash[:notice] %></p>
  <h3 class="main-logo">Books</h3>
  <table>
  <thead>
  <tr>
  <th class="title">Title</th>
  <th class="body">Body</th>
  <th></th>
  </tr>
  </thead>

　<tbody>
　<% @books.each do |book| %>
　<tr>
　<td>
　<%= book.title %>
　</td>
　<td>
　<%= book.body %>
　</td>
　<td>
　<span class="btn">
　<%= link_to "show", book_path(book.id) %>
　</span>
　<span class="btn">
　<%= link_to "edit", edit_book_path(book.id) %>
　</span>
　<span class="btn">
　<%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
　</span>
　</td>
　</tr>
　<% end %>
　</tbody>
　</table>


　　<%= form_for(@book) do |f| %>
　　<h1 class="newbook">New Book</h1>
　　  <% if @book.errors.any? %>
  　  　<div>
   　  　<ul>
     　　 <h3><%= @book.errors.count %> errors prohibited this obj from being saved</h3>
       　　 <% @book.errors.full_messages.each do |message| %>
        　　<li><%= message %></li>
     　　　 <% end %>
    　　</ul>
     </div>
　　<% end %>

　<h4 class="new-form">Title</h4>
　<%= f.text_field :title %>

　<h4 class="new-form">Body</h4>
　<%= f.text_area :body %>

　<br><%= f.submit 'Create Book' %></br>

　<% end %>
</main>