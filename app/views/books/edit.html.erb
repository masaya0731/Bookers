<h1>Editing Book</h1>
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <%= flash[:notice] %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>body</h4>
  <%= f.text_area :body %>
  <div>
  <%= f.submit 'Update Book' %>
  </div>
  <%= link_to "Show", book_path(@book.id) %>
  <span>|</span>
  <%= link_to("Back","/books") %>
<% end %>